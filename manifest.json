{
    "name": "Firebase User Changer",
    "version": "0.2.0",
    "description": "Extension that helps changing the firebase console url to a specific user.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "*://console.firebase.google.com/*",
        "*://play.google.com/*"
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "manifest_version": 2
}
